{
  "name": "cursor-usage",
  "displayName": "Cursor Usage Monitor",
  "description": "Monitor your Cursor account billing usage from Cursor.",
  "version": "0.0.2",
  "publisher": "ZGZ",
  "engines": {
    "vscode": "^1.86.0"
  },
  "keywords": [
    "cursor",
    "usage",
    "billing",
    "cost",
    "token",
    "spend",
    "analytics"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:cursorUsage.refresh",
    "onCommand:cursorUsage.updateToken"
  ],
  "main": "./dist/extension.js",
  "icon": "src/images/icon.png",
  "contributes": {
    "commands": [
      {
        "command": "cursorUsage.refresh",
        "title": "Cursor Usage: Refresh"
      },
      {
        "command": "cursorUsage.updateToken",
        "title": "Cursor Usage: Update Token"
      },
      {
        "command": "cursorUsage.openSettings",
        "title": "Cursor Usage: Open Settings"
      }
    ],
    "configuration": {
      "title": "Cursor Usage",
      "properties": {
        "cursorUsage.displayMode": {
          "type": "string",
          "default": "money",
          "enum": [
            "money",
            "percent"
          ],
          "description": "Show usage as money or percentage."
        },
        "cursorUsage.refreshIntervalMinutes": {
          "type": "number",
          "default": 15,
          "minimum": 1,
          "description": "How often to refresh usage data."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.86.0",
    "typescript": "^5.3.3",
    "@vscode/vsce": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.ushow.media/guangzhi.zhang/cursor-usage"
  }
}
